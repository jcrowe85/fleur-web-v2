{%- style -%}
  {% render 'section-margin' %}
  .qr-landing {
    padding: 0;
  }
  .qr-landing__wrapper {
    max-width: 800px;
    padding-left: 2rem;
    padding-right: 2rem;
  }
  @media screen and (min-width: 750px) {
    .qr-landing__wrapper {
      padding-left: 3rem;
      padding-right: 3rem;
    }
  }
  .qr-landing__container {
    padding: 0;
    margin: 0;
  }
  .qr-landing-hero {
    text-align: center;
    margin-bottom: 3rem;
    padding: 0;
  }
  @media screen and (min-width: 750px) {
    .qr-landing-hero {
      margin-bottom: 4rem;
    }
  }
  .qr-landing-hero__title {
    font-size: 3.6rem;
    line-height: 1.2;
    letter-spacing: -0.02em;
    margin-bottom: 1.5rem;
    font-weight: 600;
  }
  @media screen and (min-width: 750px) {
    .qr-landing-hero__title {
      font-size: 4.8rem;
      margin-bottom: 2rem;
    }
  }
  @media screen and (min-width: 1200px) {
    .qr-landing-hero__title {
      font-size: 5.6rem;
      margin-bottom: 2.4rem;
    }
  }
  .qr-landing-hero__subtitle {
    font-size: 1.8rem;
    line-height: 1.5;
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto;
  }
  @media screen and (min-width: 750px) {
    .qr-landing-hero__subtitle {
      font-size: 2rem;
    }
  }
  .qr-landing-form-wrapper {
    max-width: 100%;
    margin: 0;
    padding: 0;
  }
  .qr-landing .contact-form__block {
    padding: 2.4rem !important;
    max-width: 100% !important;
    flex: none !important;
    border-radius: 1.2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }
  @media screen and (min-width: 750px) {
    .qr-landing .contact-form__block {
      padding: 3.2rem !important;
      border-radius: 1.6rem;
    }
  }
  @media screen and (min-width: 1200px) {
    .qr-landing .contact-form__block {
      padding: 4rem !important;
      max-width: 600px !important;
      margin: 0 auto !important;
      border-radius: 2rem;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    }
  }
  /* Modern form field spacing */
  .qr-landing-form .field {
    margin-bottom: 2.4rem !important;
    position: relative;
  }
  .qr-landing-form .field:last-of-type {
    margin-bottom: 0;
  }
  @media screen and (min-width: 750px) {
    .qr-landing-form .field {
      margin-bottom: 2.8rem !important;
    }
  }
  /* Enhanced label styling */
  .qr-landing-form .field__label {
    display: block;
    margin-bottom: 0.8rem !important;
    font-size: 1.4rem;
    font-weight: 600;
    color: rgb(var(--color-foreground));
    letter-spacing: -0.01em;
  }
  @media screen and (min-width: 750px) {
    .qr-landing-form .field__label {
      margin-bottom: 1rem !important;
      font-size: 1.5rem;
    }
  }
  /* Modern input styling */
  .qr-landing-form .field__input {
    width: 100%;
    padding: 1.6rem 2rem !important;
    font-size: 1.6rem;
    line-height: 1.5;
    border-radius: 1rem !important;
    border: 0.15rem solid rgb(var(--color-border-input));
    background-color: rgb(var(--color-background-input));
    transition: all 0.3s ease;
    height: auto;
    min-height: 5.2rem;
  }
  @media screen and (min-width: 750px) {
    .qr-landing-form .field__input {
      padding: 1.8rem 2.2rem !important;
      font-size: 1.6rem;
      min-height: 5.6rem;
    }
  }
  .qr-landing-form .field__input:focus {
    outline: none;
    border-color: rgb(var(--color-foreground));
    box-shadow: 0 0 0 3px rgba(var(--color-foreground), 0.1);
    transform: translateY(-1px);
  }
  .qr-landing-form .field__input:hover:not(:focus) {
    border-color: rgba(var(--color-border-input-hover), 0.8);
  }
  .qr-landing-form .field__input::placeholder {
    color: rgba(var(--color-foreground), 0.4);
    opacity: 1;
  }
  /* Submit button styling */
  .qr-landing-form .contact__bottom {
    margin-top: 3.2rem !important;
  }
  @media screen and (min-width: 750px) {
    .qr-landing-form .contact__bottom {
      margin-top: 3.6rem !important;
    }
  }
  .qr-landing-form .button--primary {
    width: 100%;
    padding: 1.8rem 3rem;
    font-size: 1.6rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    border-radius: 1rem;
    transition: all 0.3s ease;
    text-transform: none;
    min-height: 5.6rem;
  }
  @media screen and (min-width: 750px) {
    .qr-landing-form .button--primary {
      padding: 2rem 3.2rem;
      font-size: 1.7rem;
      min-height: 6rem;
    }
  }
  .qr-landing-form .button--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(var(--color-button), 0.3);
  }
  .qr-landing-form .button--primary:active {
    transform: translateY(0);
  }
  /* Form asterisk styling */
  .qr-landing-form .form-asterisk {
    color: rgb(217, 76, 76);
    margin-left: 0.4rem;
    font-weight: 600;
  }
  /* Additional text spacing */
  .qr-landing-form .contact__add-text {
    margin-top: 2rem !important;
    text-align: center;
    font-size: 1.3rem;
    line-height: 1.6;
    opacity: 0.7;
  }
  @media screen and (min-width: 750px) {
    .qr-landing-form .contact__add-text {
      margin-top: 2.4rem !important;
      font-size: 1.4rem;
    }
  }
  /* Error message styling */
  .qr-landing-form .contact__field-error {
    margin-top: 0.8rem;
    display: block;
  }
  /* Success/error status messages */
  .qr-landing-form .form-status {
    padding: 1.6rem 2rem;
    border-radius: 1rem;
    margin-bottom: 2.4rem;
  }
  .qr-landing-form .form-status.form__message--error {
    background-color: rgba(217, 76, 76, 0.1);
    border: 0.1rem solid rgba(217, 76, 76, 0.3);
  }
{%- endstyle -%}

<div class="qr-landing">
  <div class="container qr-landing__wrapper">
    <div class="qr-landing__container">
      {% if section.settings.heading != blank or section.settings.subtitle != blank %}
        <div class="qr-landing-hero">
          {%- if section.settings.heading != blank -%}
            <h1 class="qr-landing-hero__title">
              {{ section.settings.heading }}
            </h1>
          {%- else -%}
            <h1 class="qr-landing-hero__title">Claim Your Free Derma Stamp</h1>
          {%- endif -%}
          {% if section.settings.subtitle != blank %}
            <div class="qr-landing-hero__subtitle">
              {{ section.settings.subtitle }}
            </div>
          {% else %}
            <div class="qr-landing-hero__subtitle">
              Scan your QR code to claim your free derma stamp. Simply fill out the form below and we'll send it your way!
            </div>
          {% endif %}
        </div>
      {% endif %}
      
      <div class="qr-landing-form-wrapper">
        <div class="contact-form__block color-{{ section.settings.color_scheme }} background">
          {% if section.settings.form_heading != blank or section.settings.form_desc != blank %}
            <div class="contact-form__header">
              {%- if section.settings.form_heading != blank -%}
                <h2 class="contact-form__title">
                  {{ section.settings.form_heading }}
                </h2>
              {%- endif -%}
              {% if section.settings.form_desc != blank %}
                <div class="contact-form__desc richtext__content">
                  {{ section.settings.form_desc }}
                </div>
              {% endif %}
            </div>
          {% endif %}
          
          {%- form 'contact', id: 'QRContactForm', class: 'qr-landing-form' -%}
            {%- if form.posted_successfully? -%}
              <div
                class="form-status form-status-list form__message"
                tabindex="-1"
                autofocus
              >
                {% render 'icon-success' %}
                <p>{{ section.settings.success_message | default: "Thank you! We've received your information and will be in touch soon." }}</p>
              </div>
            {%- elsif form.errors -%}
              <div class="form-status form-status-list form__message form__message--error">
                {% render 'icon-error' %}
                <p>{{ 'templates.contact.form.error_heading' | t }}</p>
                <ul>
                  {%- for field in form.errors -%}
                    <li>
                      {%- if field == 'form' -%}
                        {{ form.errors.messages[field] }}
                      {%- else -%}
                        <a href="#QRContactForm-{{ field }}">
                          {{ form.errors.translated_fields[field] | capitalize }}
                          {{ form.errors.messages[field] }}
                        </a>
                      {%- endif -%}
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            {%- endif -%}
            
            <input type="hidden" name="contact[tags]" value="QR Code, Free Derma Stamp">
            
            <div class="field field__name">
              <label class="field__label small-font" for="QRContactForm-name">
                Full Name
                <span class="form-asterisk">*</span>
              </label>
              <input
                class="field__input"
                autocomplete="name"
                type="text"
                id="QRContactForm-name"
                name="contact[Full Name]"
                aria-required="true"
                value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                placeholder="Enter your full name"
                required
              >
            </div>
            
            <div class="field">
              <label class="field__label small-font" for="QRContactForm-email">
                Email Address
                <span class="form-asterisk">*</span>
              </label>
              <input
                autocomplete="email"
                type="email"
                id="QRContactForm-email"
                class="field__input"
                name="contact[email]"
                spellcheck="false"
                autocapitalize="off"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                aria-required="true"
                {% if form.errors contains 'email' %}
                  aria-invalid="true"
                  aria-describedby="QRContactForm-email-error"
                {% endif %}
                placeholder="Enter your email address"
                required
              >
              {%- if form.errors contains 'email' -%}
                <small class="contact__field-error" id="QRContactForm-email-error">
                  <span class="visually-hidden">
                    {{- 'accessibility.error' | t -}}
                  </span>
                  <span class="form__message">
                    {{- form.errors.translated_fields.email | capitalize }}
                    {{ form.errors.messages.email -}}
                  </span>
                </small>
              {%- endif -%}
            </div>
            
            <div class="field">
              <label class="field__label small-font" for="QRContactForm-phone">
                Phone Number
                <span class="form-asterisk">*</span>
              </label>
              <input
                type="tel"
                id="QRContactForm-phone"
                class="field__input"
                autocomplete="tel"
                name="contact[Phone Number]"
                pattern="[0-9\-]*"
                aria-required="true"
                value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                placeholder="Enter your phone number"
                required
              >
            </div>
            
            <div class="contact__bottom">
              <button type="submit" class="button button--primary button--primary-size">
                {{ section.settings.button_label | default: "Claim My Free Derma Stamp" }}
              </button>
              
              {% if section.settings.additional_text != blank %}
                <div class="contact__add-text">
                  {{ section.settings.additional_text }}
                </div>
              {% endif %}
            </div>
          {%- endform -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "QR Landing Form",
  "tag": "section",
  "class": "spaced-section contact-section",
  "enabled_on": {
    "templates": ["*"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Hero Section"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Claim Your Free Derma Stamp",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "default": "<p>Scan your QR code to claim your free derma stamp. Simply fill out the form below and we'll send it your way!</p>",
      "label": "Subtitle"
    },
    {
      "type": "header",
      "content": "Form Settings"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "background-2",
      "label": "t:sections.all.color_scheme.label"
    },
    {
      "type": "inline_richtext",
      "id": "form_heading",
      "label": "Form Heading (optional)"
    },
    {
      "type": "richtext",
      "id": "form_desc",
      "label": "Form Description (optional)"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Claim My Free Derma Stamp",
      "label": "Submit Button Label"
    },
    {
      "type": "richtext",
      "id": "additional_text",
      "label": "Additional Text (below button)"
    },
    {
      "type": "text",
      "id": "success_message",
      "default": "Thank you! We've received your information and will be in touch soon.",
      "label": "Success Message"
    },
    {
      "type": "header",
      "content": "t:sections.all.section-margin.header.content"
    },
    {
      "type": "select",
      "id": "margin_top",
      "options": [
        {
          "value": "no-indent",
          "label": "t:sections.all.section-margin.options__1.label"
        },
        {
          "value": "xs",
          "label": "t:sections.all.section-margin.options__2.label"
        },
        {
          "value": "s",
          "label": "t:sections.all.section-margin.options__3.label"
        },
        {
          "value": "m",
          "label": "t:sections.all.section-margin.options__4.label"
        },
        {
          "value": "l",
          "label": "t:sections.all.section-margin.options__5.label"
        }
      ],
      "default": "m",
      "label": "t:sections.all.section-margin.margin_top.label"
    },
    {
      "type": "select",
      "id": "margin_bottom",
      "options": [
        {
          "value": "no-indent",
          "label": "t:sections.all.section-margin.options__1.label"
        },
        {
          "value": "xs",
          "label": "t:sections.all.section-margin.options__2.label"
        },
        {
          "value": "s",
          "label": "t:sections.all.section-margin.options__3.label"
        },
        {
          "value": "m",
          "label": "t:sections.all.section-margin.options__4.label"
        },
        {
          "value": "l",
          "label": "t:sections.all.section-margin.options__5.label"
        }
      ],
      "default": "m",
      "label": "t:sections.all.section-margin.margin_bottom.label"
    }
  ],
  "presets": [
    {
      "name": "QR Landing Form"
    }
  ]
}
{% endschema %}
